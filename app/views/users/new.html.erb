<div class="row">
  <div class="span6 offset3">
		<h1>New user</h1>
		<%= form_for(@user) do |f| %>
			<%= render "#{@user.current_step}_step", f: f %>
			<div class="row">
			  <div class="col col-lg-10 col-offset-2">
					<%= f.submit "Back", :name => "back_button" unless @user.first_step? %>
					<%= f.submit "Continue" %>
			  </div>
			</div>
		<% end %>
		<%= link_to 'Back', users_path %>
	</div>
</div>
