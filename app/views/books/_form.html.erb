<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </div>
    <%= f.fields_for :category do |k| %>
      <div class="field">
        <%= k.label :category %><br>
        <%= k.collection_select(:category_id, Category.all(order: :name), :id, :name)%>
      </div>
    <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
